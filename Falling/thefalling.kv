MainCanvas:

#:set avatar_Size dp(15)
#:set button_Size dp(75)

<MainCanvas>:
    canvas:
        Color:
            rgba: 0, 1, 0, 1
        Rectangle:
            id: my_player
            pos: root.rec_x-avatar_Size/2, self.height/1.4
            size: avatar_Size, avatar_Size

    BoxLayout:
        spacing: 40
        padding: 10
        size: root.width, 100
        Button:
            id: left_button
            text: 'Left'
            size: button_Size, button_Size
            on_press: root.on_left_click()
        Button:
            id: right_button
            text: 'Right'
            size: button_Size, button_Size
            on_press: root.on_right_click()

